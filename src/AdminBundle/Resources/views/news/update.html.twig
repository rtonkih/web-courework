{% extends '::base.html.twig' %}

{% block body %}
    <div class="center-block" style="width: 500px">
        <h6 class="">Обновление новости</h6>
        {{ form_start(edit_form, {
            'attr': {
                'action': path('admin_news_update', {'id': news.id}),
                'method': 'post',
                novalidate: 'novalidate'
            }
        }) }}
        <div class="form-group">
            <label class="form__label">Заголовок</label>
            {{ form_row(edit_form.title, {
                'attr': {
                    'type':'text',
                    'class':'form__input-field form-control',
                    novalidate: 'novalidate'
                }
            }) }}
        </div>
        <div class="form-group">
            <label class="form__label">Текст</label>
            {{ form_row(edit_form.text, {
                'attr': {
                    'class':'news-create form-control',
                    novalidate: 'novalidate'
                }
            }) }}
        </div>
        <a class="btn btn-info" href="{{ path('admin_news_index') }}">Отмена</a>
        <button class="btn btn-success">Опубликовать</button>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}